#!/bin/bash
case "$1" in
     "install"|"-i" )
          MODE="INSTALL"
          ;;

     "remove"|"-r" )
          MODE="REMOVE"
          ;;

     "search"|"find"|"-s")
          MODE="SEARCH"
          ;;

     "update"|"-u" )
          MODE="UPDATE"
          VOL="$2"
          ;;
      * )
			echo "Commands availiable
	install 	install packages
	search		find packages
	find		^^^^^^^^^^^^^
	update		performs -Sy, not recomended, use upgrade
	upgrade		performs system upgrade"
          exit 0
esac
case "$MODE" in
          "INSTALL" )
               yay -S $2 $3 $4 $5 $6 $7 $8 $9
               ;;

          "REMOVE" )
               yay -R $2 $3 $4 $5 $6 $7 $8 $9
               ;;

          "SEARCH" )
               yay -S $2 $3 $4 $5 $6 $7 $8 $9
               ;;

          "UPDATE" )
               yay -Sy
			   ;;
		  "UPGRADE" )
		  		yay -Syu
 	 esac
     exit 0
else